    <div class="main2">
        <span class="mytrips">My trips</span>
      <div class="userInfo">

        <p class="userName">
          <%= @user.name %>
        </p>

        <div class="userImage">
          <%= image_tag @user.avatar.url(:medium) %>
        </div>


        <p class="userEmail">
          <strong>Email:</strong>
          <%= @user.email %>
        </p>

<%= render 'paper' %>

        <%= link_to 'Edit', edit_user_path(@user), class: "btn btn-primary first-button" %> |
        <%= link_to 'Back', users_path,class: "btn btn-primary"%>

        <div class="tripContainer">
          <div class="triplist">
          <tbody>
               <% @user.trips.each do |trip| %>
                 <tr class="trips"><br>
                   <td><%= link_to trip.title, trip_path(trip)%></td><br>
                 </tr>
               <% end %>
           </tbody>
           </div>
          <div class="trip-button">
            <td><%= link_to 'Create New Trip', root_path, class: "user-trip btn btn-primary"%></td><br>

          </div>
        </div>

      </div>
