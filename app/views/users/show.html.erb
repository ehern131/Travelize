            <ul class="mytrips-listings" id='tripsBox'>
              <li><%= link_to trip.title, trip_path(trip)%>
                <%= link_to '', edit_trip_path(trip), class: "fa fa-trash", id: "trash"%>
                <%= link_to '', trip_path(trip), class: "fa fa-eye", id: "eye"%>
                <%= link_to '', edit_trip_path(trip), class: "fa fa-cog", id: "cog"%>
              </li><br>
            </ul>
            <% end %>
          </div>
