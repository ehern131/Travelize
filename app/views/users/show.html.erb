    <div class="main2">
      <div class="userInfo">



        <div class="userDetails">
          <p class="userName">
            <%= @user.name %>
          </p>
          <div class="userImage">
            <%= image_tag @user.avatar.url(:medium) %>
          </div>
          <p class="userEmail">
            <strong>Email:</strong>
            <%= @user.email %>
          </p>
          <%= render 'paper' %>
